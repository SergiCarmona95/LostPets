<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Nombre:"
        android:textStyle="bold"
        android:textColor="@color/cardview_dark_background"
        android:layout_width="100dp"
        android:textSize="25dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/nombreFiltrar"
        android:layout_alignBottom="@+id/nombreFiltrar"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Raza:"
        android:textSize="25dp"
        android:textColor="@color/cardview_dark_background"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/nombreFiltrar"
        android:textStyle="bold"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerFiltrar"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="66dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/colorFiltrar"
        android:layout_alignStart="@+id/textView4">

        <RadioButton
            android:text="Chip Si"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/filtrarChipSi"
            android:layout_weight="1" />

        <RadioButton
            android:text="Chip No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/filtrarChipNo"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:text="Color:"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/cardview_dark_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colorFiltrar"
        android:layout_alignEnd="@+id/nombreFiltrar"
        android:layout_marginTop="22dp"
        android:id="@+id/botonFiltrar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nombreFiltrar"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/colorFiltrar"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/radioGroup" />

</RelativeLayout>